<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:background="@drawable/custom_bg"
                                    card_view:cardCornerRadius="5dp"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:cardElevation="5.5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp" >

        <ImageView
            android:id="@+id/iconId"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/chapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconId"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Lollipop"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/chapterZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapterName"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Zone"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/chapterDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapterZone"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/md_orange_700"
            android:textSize="14dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>