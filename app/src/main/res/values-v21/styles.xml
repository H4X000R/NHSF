<resources>

    <!-- Overriding default theme in Android Lollipop to base custom Theme -->
    <style name="Theme.Custom" parent="Theme.Base">
            </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/md_orange_900</item>
    </style>

    <style name="AppTheme.TransNav" parent="AppTheme">
        <item name="android:navigationBarColor">@color/md_orange_850</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>